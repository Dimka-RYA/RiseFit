<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RiseFit"
        tools:targetApi="31">
        <!-- Экран главного меню тренера -->
        <activity
            android:name=".MainScreenActivity"
            android:exported="false"
            android:theme="@style/Theme.RiseFit" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.RiseFit">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <!-- Экран упражнений -->
        <activity
            android:name=".ExerciseActivity"
            android:exported="false"
            android:theme="@style/Theme.RiseFit" />
        
        <!-- Архив тренировок -->
        <activity
            android:name=".TrainingArchiveActivity"
            android:exported="false"
            android:theme="@style/Theme.RiseFit" />
            
        <!-- Детали тренировки -->
        <activity
            android:name=".TrainingDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.RiseFit" />
            
        <!-- Каталог упражнений -->
        <activity
            android:name=".FitnessCatalogActivity"
            android:exported="false"
            android:theme="@style/Theme.RiseFit" />
            
        <!-- План питания -->
        <activity
            android:name=".NutritionPlanActivity"
            android:exported="false"
            android:theme="@style/Theme.RiseFit" />
            
        <!-- Детали плана питания -->
        <activity
            android:name=".NutritionPlanDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.RiseFit" />
            
        <!-- Экран профиля тренера -->
        <activity
            android:name=".ProfileActivity"
            android:exported="false"
            android:theme="@style/Theme.RiseFit" />
            
        <!-- Шаблоны тренировок -->
        <activity
            android:name=".TrainingTemplatesActivity"
            android:exported="false"
            android:theme="@style/Theme.RiseFit" />
        <!-- Экран деталей плана тренировки -->
        <activity
            android:name=".TrainingPlanDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.RiseFit" />
        <!-- Экран шаблона плана тренировки -->
        <activity
            android:name=".ShablonPlanDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.RiseFit" />
        
        <activity
            android:name=".PlanActivity"
            android:exported="false"
            android:theme="@style/Theme.RiseFit" />
            
    </application>

</manifest>